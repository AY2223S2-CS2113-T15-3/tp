@startuml
'https://plantuml.com/sequence-diagram
!include style.puml
title Architecture Sequence Diagram

Actor User as user #crimson
participant MoneyMind as mm #lightblue
participant UI as ui #lightpink
participant Parser as ps #orange
participant EventCommand as event #lightgreen
participant Data as data #lightyellow
participant Storage as storage #lightgrey



user -[#crimson]> mm : event  buy lunch e/10
activate mm #lightblue

mm -[#lightblue]> ps : parseNextCommand()
activate ps #orange

ps -[#orange]> ps : createEventCommand()
activate ps #orange
ps -[#orange]> event : <<create>>
activate event #lightgreen
event --[#lightgreen]> ps
deactivate event #lightgreen
ps --[#orange]> ps
deactivate ps #orange
ps --[#orange]> mm
deactivate ps #orange

mm -[#lightblue]> event : isExit()
activate event #lightgreen
event --[#lightgreen]> mm
deactivate event #lightgreen

mm -[#lightblue]> event : execute()
activate event #lightgreen
event -[#lightgreen]> data : <<create>>
activate data #lightyellow
data --[#lightyellow]> event
deactivate data #lightyellow
event --[#lightgreen]> mm

mm -[#lightblue]> storage : save()
activate storage #lightgrey
storage --[#lightgrey]> mm
deactivate storage #lightgrey








@enduml